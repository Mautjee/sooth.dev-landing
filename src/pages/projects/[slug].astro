---
import { readdir, readFile } from 'fs/promises';
import { join } from 'path';
import { remark } from 'remark';
import remarkGfm from 'remark-gfm';
import remarkBreaks from 'remark-breaks';
import remarkHtml from 'remark-html';
import yaml from 'js-yaml';

export async function getStaticPaths() {
  const projectsDir = join(process.cwd(), 'src/content/projects');
  
  try {
    const files = await readdir(projectsDir);
    const mdFiles = files.filter(file => file.endsWith('.md'));
    
    return mdFiles.map(file => ({
      params: { slug: file.replace('.md', '') }
    }));
  } catch {
    return [];
  }
}

const { slug } = Astro.params;
const projectPath = join(process.cwd(), 'src/content/projects', `${slug}.md`);

let content = '';
let frontmatter = {};

try {
  const fileContent = await readFile(projectPath, 'utf-8');
  const frontmatterMatch = fileContent.match(/^---\n([\s\S]*?)\n---\n([\s\S]*)$/);
  
  if (frontmatterMatch) {
    const frontmatterText = frontmatterMatch[1];
    const markdownContent = frontmatterMatch[2];
    
    // Parse markdown to HTML with remark
    const result = await remark()
      .use(remarkGfm) // GitHub Flavored Markdown (tables, strikethrough, etc.)
      .use(remarkBreaks) // Convert line breaks to <br>
      .use(remarkHtml) // Convert to HTML
      .process(markdownContent);
    
    content = String(result);
    
    // Use proper YAML parser
    try {
      frontmatter = yaml.load(frontmatterText) || {};
      console.log('Parsed frontmatter:', frontmatter);
    } catch (yamlError) {
      console.error('YAML parsing error:', yamlError);
      frontmatter = { title: 'Error loading project', description: 'Could not parse project metadata' };
    }
  } else {
    console.log('No frontmatter match found');
    console.log('File content preview:', fileContent.substring(0, 200));
  }
} catch (error) {
  console.error('Error loading project:', error);
}

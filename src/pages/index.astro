<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Coming Soon - Stay tuned for something amazing!" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>Coming Soon</title>
  </head>
  <body class="bg-gruvbox-dark-bg min-h-screen flex items-center justify-center overflow-hidden">
    <!-- Animated background particles -->
    <div class="absolute inset-0 overflow-hidden">
      <div class="absolute top-1/4 left-1/4 w-4 h-4 bg-gruvbox-yellow opacity-20 rounded-full animate-float"></div>
      <div class="absolute top-3/4 left-1/3 w-3 h-3 bg-gruvbox-blue opacity-30 rounded-full animate-float" style="animation-delay: 1s;"></div>
      <div class="absolute top-1/2 right-1/4 w-5 h-5 bg-gruvbox-green opacity-25 rounded-full animate-float" style="animation-delay: 2s;"></div>
      <div class="absolute bottom-1/4 right-1/3 w-2 h-2 bg-gruvbox-purple opacity-40 rounded-full animate-float" style="animation-delay: 3s;"></div>
      <div class="absolute top-1/6 right-1/6 w-3 h-3 bg-gruvbox-orange opacity-35 rounded-full animate-float" style="animation-delay: 4s;"></div>
    </div>

    <!-- Main content -->
    <div class="text-center space-y-8 animate-fade-in relative z-10 px-4">
      <!-- Logo/Brand placeholder -->
      <div class="mb-12 animate-slide-up">
        <div class="w-20 h-20 mx-auto bg-gruvbox-yellow rounded-full flex items-center justify-center animate-pulse-glow">
          <span class="text-gruvbox-dark-bg text-2xl font-bold">S</span>
        </div>
      </div>

      <!-- Main heading with typing animation -->
      <div class="space-y-4">
        <h1 class="text-6xl md:text-8xl font-bold text-gruvbox-yellow animate-pulse-glow">
          <span class="inline-block animate-slide-up" style="animation-delay: 0.5s;">C</span>
          <span class="inline-block animate-slide-up" style="animation-delay: 0.6s;">O</span>
          <span class="inline-block animate-slide-up" style="animation-delay: 0.7s;">M</span>
          <span class="inline-block animate-slide-up" style="animation-delay: 0.8s;">I</span>
          <span class="inline-block animate-slide-up" style="animation-delay: 0.9s;">N</span>
          <span class="inline-block animate-slide-up" style="animation-delay: 1.0s;">G</span>
        </h1>
        <h2 class="text-4xl md:text-6xl font-bold text-gruvbox-fg animate-slide-up" style="animation-delay: 1.2s;">
          SOON
        </h2>
      </div>

      <!-- Subtitle -->
      <p class="text-xl md:text-2xl text-gruvbox-gray max-w-2xl mx-auto animate-slide-up" style="animation-delay: 1.5s;">
        We're still busy building, stay tuned!
      </p>

      <!-- Animated divider -->
      <div class="flex justify-center items-center space-x-2 animate-slide-up" style="animation-delay: 1.8s;">
        <div class="w-16 h-1 bg-gruvbox-yellow rounded animate-pulse"></div>
        <div class="w-4 h-4 bg-gruvbox-yellow rounded-full animate-bounce"></div>
        <div class="w-16 h-1 bg-gruvbox-yellow rounded animate-pulse"></div>
      </div>

      <!-- GitHub link -->
      <div class="flex justify-center animate-slide-up" style="animation-delay: 2.3s;">
        <a href="https://github.com/Mautjee" target="_blank" rel="noopener noreferrer" class="text-gruvbox-gray hover:text-gruvbox-fg transition-colors duration-300 transform hover:scale-110 flex items-center space-x-2 group">
          <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
          <span class="text-lg font-medium group-hover:text-gruvbox-fg transition-colors duration-300">@Mautjee</span>
        </a>
      </div>

      <!-- Footer -->
      <div class="text-sm text-gruvbox-gray animate-slide-up" style="animation-delay: 2.5s;">
        <p>&copy; 2025 Sooth.dev</p>
      </div>
    </div>

    <!-- Additional animated elements -->
    <div class="absolute bottom-10 left-10 opacity-20">
      <div class="w-32 h-32 border-4 border-gruvbox-yellow rounded-full animate-pulse"></div>
    </div>
    <div class="absolute top-10 right-10 opacity-15">
      <div class="w-24 h-24 border-4 border-gruvbox-blue rounded-full animate-pulse" style="animation-delay: 1s;"></div>
    </div>

  </body>
</html>
